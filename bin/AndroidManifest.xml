<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trasselback.rapgenius"
    android:versionCode="17"
    android:versionName="2.4.4" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.trasselback.rapgenius.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AnimationDisabledAppBaseTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="fav_clicked" />
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="song_clicked" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.trasselback.rapgenius.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.trasselback.rapgenius.SettingsPreferenceActivity"
            android:label="@string/title_activity_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.trasselback.rapgenius.MainActivity" />
        </activity>
        <activity
            android:name="com.trasselback.rapgenius.ExplanationActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_explanation"
            android:screenOrientation="portrait" >

            <!-- Links starting with explanation_clicked start a new intent -->
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="explanation_clicked" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.trasselback.rapgenius.ForumThreadActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_forum_thread"
            android:screenOrientation="portrait" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="forum_thread_clicked" />
            </intent-filter>
        </activity>
    </application>

</manifest>